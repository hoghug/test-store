
{%- style -%}
  #shopify-section-{{ section.id }} .two-column-section {
    display: flex; 
    flex-direction: column;
  }
  #shopify-section-{{ section.id }} .two-column-section .section-column {
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ section.id }} .two-column-section {
      flex-direction: row;
    }
    #shopify-section-{{ section.id }} .two-column-section .section-column {
      width: 50%;
    }
  }
{%- endstyle -%}


<div class="two-column-section">
  <div class="section-column">
    {{ section.settings.left_image | image_url: width: 500 | image_tag }}

  </div>

  <div class="section-column">
    {{ section.settings.right_image | image_url: width: 500 | image_tag }}
  </div>
</div>

{% schema %}
  {
    "name": "Two Column Images",
    "settings": [
      {
        "label": "Left Image",
        "type": "image_picker",
        "id": "left_image"
      },
      {
        "label": "Right Image",
        "type": "image_picker",
        "id": "right_image"
      }
    ],
    "presets": [
      {
        "name": "Two Column Section",
        "category": "Custom"
      }
    ]
  }
{% endschema %}